<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elmeniawy.eslam.yts.fragments.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/drawer_list_image"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_image_height"
            android:layout_marginTop="@dimen/drawer_image_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:src="@drawable/logo"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_below="@+id/drawer_list_image"
        android:background="@color/primaryColorDark">
        <LinearLayout
            android:layout_width="@dimen/nav_drawer_width"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                style="@style/DrawerTextView"/>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationsSwitch"
                android:hint="@string/notifications_enable"
                android:textColor="@color/normalText"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/drawer_divider_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/darkBackground"/>

            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aboutApp"
                app:rv_color="@color/accentColor"
                app:rv_rippleDuration="150">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DrawerRippleViewLayout">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_about"
                        style="@style/DrawerRippleViewImageView"/>
                    <CheckedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        style="@style/DrawerRippleViewTextView"/>
                </LinearLayout>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rateApp"
                app:rv_color="@color/accentColor"
                app:rv_rippleDuration="150">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DrawerRippleViewLayout">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_good"
                        style="@style/DrawerRippleViewImageView"/>
                    <CheckedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_app"
                        style="@style/DrawerRippleViewTextView"/>
                </LinearLayout>
            </com.andexert.library.RippleView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/drawer_divider_margin"
                android:background="@color/darkBackground"/>

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/developer"
                style="@style/DrawerTextView"/>

            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aboutDeveloper"
                app:rv_color="@color/accentColor"
                app:rv_rippleDuration="150">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DrawerRippleViewLayout">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_about"
                        style="@style/DrawerRippleViewImageView"/>
                    <CheckedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        style="@style/DrawerRippleViewTextView"/>
                </LinearLayout>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/developerSocial"
                app:rv_color="@color/accentColor"
                app:rv_rippleDuration="150">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DrawerRippleViewLayout">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_person"
                        style="@style/DrawerRippleViewImageView"/>
                    <CheckedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/social"
                        style="@style/DrawerRippleViewTextView"/>
                </LinearLayout>
            </com.andexert.library.RippleView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
