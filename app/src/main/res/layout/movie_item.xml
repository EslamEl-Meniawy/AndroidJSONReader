<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/drawer_image_padding">

    <ImageView
        android:id="@+id/movie_image"
        android:layout_width="@dimen/image_width"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/movie_tittle"
        style="@style/LargeText"
        android:layout_width="@dimen/image_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_image"
        android:ellipsize="end"
        android:padding="@dimen/drawer_image_padding"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="@dimen/image_width"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/movie_tittle"
        android:weightSum="2">
        <TextView
            android:id="@+id/movie_year"
            style="@style/MediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/drawer_image_padding" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/drawer_image_padding"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_star"/>
            <TextView
                android:id="@+id/movie_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image"
                android:layout_toRightOf="@+id/image"
                style="@style/MediumText"
                android:padding="@dimen/drawer_image_padding" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/image_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/movie_quality_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_image_padding"
            android:layout_marginRight="@dimen/drawer_image_padding"
            android:background="@color/darkBackground"
            android:padding="@dimen/drawer_image_padding"
            android:textColor="@color/normalText"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/movie_quality_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_image_padding"
            android:layout_marginRight="@dimen/drawer_image_padding"
            android:background="@color/darkBackground"
            android:padding="@dimen/drawer_image_padding"
            android:textColor="@color/normalText"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/movie_quality_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_image_padding"
            android:layout_marginRight="@dimen/drawer_image_padding"
            android:background="@color/darkBackground"
            android:padding="@dimen/drawer_image_padding"
            android:textColor="@color/normalText"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>