<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/normalText</item>
        <item name="android:textColorSecondary">@color/normalText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerRippleViewImageView">
        <item name="android:padding">@dimen/drawer_image_padding</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DialogAboutHeaderImage" parent="DrawerRippleViewImageView">
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
    </style>

    <style name="LargeText">
        <item name="android:textColor">@color/headingsText</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="DialogAboutHeaderText" parent="LargeText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DrawerRippleViewLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
    </style>

    <style name="DialogRippleViewLayout" parent="DrawerRippleViewLayout">
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
    </style>

    <style name="MediumText">
        <item name="android:textColor">@color/headingsText</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="DrawerRippleViewTextView" parent="MediumText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
